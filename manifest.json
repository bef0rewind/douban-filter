{
    "manifest_version": 1,
    "name": "DoubanFilter",
    "version": "0.1",
    "description": "给豆瓣增加打开状态和截图的快捷链接",
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "permissions": [
        "downloads",
        "<all_urls>"
    ],
    "icons": {
        "48": "icons/icon48.png"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.douban.com/",
                "*://*.douban.com/?p*"
            ],
            "js": [
                "status-link.js"
            ]
        }
    ]
}